@model Category
<div class="card shadow border-2 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
       <div class="row">
           <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Category</h2>
           </div>

       </div>
    </div>
    <div class="card-body p-4">

        <form method="post" asp-controller="Category" asp-action="Create" class="row">
            <div class="border p-3 ">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="form-label ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger d-block" style="min-height: 20px;"></span>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" type="text" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="form-label ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger d-block" style="min-height: 20px;"></span>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control mt-3">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control mt-3">Go Back</a>
                    </div>
                </div>
                </div>
            </div>
        </form>
    </div>
</div>
@* //Client validation partial view *@
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}