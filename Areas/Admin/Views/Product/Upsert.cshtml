@model ProductVM

<div class="card shadow border-2 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" asp-controller="Product" asp-action="Upsert" class="row" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden />
            <input asp-for="Product.ImageUrl" hidden />

            <div class="col-10">
                <div class="border p-3">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.Title" type="text" class="form-control border-0 shadow" />
                        <label asp-for="Product.Title" class="form-label ms-2"></label>
                        <span asp-validation-for="Product.Title" class="text-danger d-block" style="min-height: 20px;"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.Description" type="text" class="form-control border-0 shadow" />
                        <label asp-for="Product.Description" class="form-label ms-2"></label>
                        <span asp-validation-for="Product.Description" class="text-danger d-block" style="min-height: 20px;"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.ISBN" type="text" class="form-control border-0 shadow" />
                        <label asp-for="Product.ISBN" class="form-label ms-2"></label>
                        <span asp-validation-for="Product.ISBN" class="text-danger d-block" style="min-height: 20px;"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.Author" type="text" class="form-control border-0 shadow" />
                        <label asp-for="Product.Author" class="form-label ms-2"></label>
                        <span asp-validation-for="Product.Author" class="text-danger d-block" style="min-height: 20px;"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.ListPrice" type="text" class="form-control border-0 shadow" />
                        <label asp-for="Product.ListPrice" class="form-label ms-2"></label>
                        <span asp-validation-for="Product.ListPrice" class="text-danger d-block" style="min-height: 20px;"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.Price" type="text" class="form-control border-0 shadow" />
                        <label asp-for="Product.Price" class="form-label ms-2"></label>
                        <span asp-validation-for="Product.Price" class="text-danger d-block" style="min-height: 20px;"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.Price50" type="text" class="form-control border-0 shadow" />
                        <label asp-for="Product.Price50" class="form-label ms-2"></label>
                        <span asp-validation-for="Product.Price50" class="text-danger d-block" style="min-height: 20px;"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.Price100" type="text" class="form-control border-0 shadow" />
                        <label asp-for="Product.Price100" class="form-label ms-2"></label>
                        <span asp-validation-for="Product.Price100" class="text-danger d-block" style="min-height: 20px;"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.ImageUrl" type="file" name="file" class="form-control border-0 shadow" />
                        <label asp-for="Product.ImageUrl" class="form-label ms-2"></label>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <select asp-for="Product.CategoryID" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                            <option disabled selected>--Select Category--</option>
                        </select>
                        <label asp-for="Product.CategoryID" class="form-label ms-2"></label>
                        <span asp-validation-for="Product.CategoryID" class="text-danger d-block" style="min-height: 20px;"></span>
                    </div>

                    <div class="row">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control mt-3">
                                @(Model.Product.Id == 0 ? "Create" : "Update")
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control mt-3">Go Back</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-2">
                <img src="@Model.Product.ImageUrl" width="100%" style="border:2px solid black" />
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
