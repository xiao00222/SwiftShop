@model IEnumerable<Product>

<div class="row pb-3 d-flex flex-wrap align-items-stretch">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6 mb-4 d-flex">
            <div class="card border-0 p-3 shadow border-top border-bottom border-5 rounded h-100 w-100 d-flex flex-column">
                <img src="@product.ImageUrl" class="card-img-top rounded" />
                <div class="card-body d-flex flex-column">
                    <div class="pl-1 mb-2">
                        <p class="card-title h5 text-dark opacity-75 text-uppercase text-center text-truncate" title="@product.Title">
                            @product.Title
                        </p>
                        <p class="card-title text-warning text-center"> by <b> @product.Author</b></p>
                    </div>
                    <div class="pl-1 mb-2">
                        <p class="card-title h6 text-dark opacity-75 text-uppercase text-center mb-0">
                            List Price:
                            <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span>
                        </p>
                    </div>
                    <div class="pl-1 mb-4">
                        <p class="card-title h6 text-dark opacity-75 text-uppercase text-center">
                            As low as: <span>@product.Price100.ToString("c")</span>
                        </p>
                    </div>

                    <!-- Button sticks to bottom -->
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary bg-gradient border-0 mt-auto">Details</a>
                </div>
            </div>
        </div>
    }
</div>
